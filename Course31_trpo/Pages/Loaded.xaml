<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Course31_trpo.Pages.Loaded">
    <ScrollView>
        <VerticalStackLayout Spacing="5">
            <CollectionView ItemsSource="{Binding ModuleList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="5">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <HorizontalStackLayout Grid.Row="0" Spacing="5">
                                    <Image Source="{Binding Image.Value}" Aspect="AspectFit"/>
                                    <Label Text="{Binding Name}" FontSize="Medium"/>
                                    <HorizontalStackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SwitchCommand}"/>
                                    </HorizontalStackLayout.GestureRecognizers>
                                </HorizontalStackLayout>
                                <CollectionView ItemsSource="{Binding DisplayList}" Grid.Row="1">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <HorizontalStackLayout Spacing="5">
                                                <Label Text="{Binding FilePath}"/>
                                            </HorizontalStackLayout>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>